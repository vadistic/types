{
  "extends": [
    "dtslint/dtslint.json",
    "tslint:recommended",
    "tslint-config-prettier"
  ],
  "rules": {
    // declaring module allow overwirting vendor typings without additional setup
    "no-single-declare-module": false,
    "ordered-imports": true,
    "interface-name": [true, "never-prefix"]
  }
}
