{
  "name": "types",
  "version": "0.1.0",
  "description": "Monorepo experiment for git-powered typescript definitions sharing",
  "repository": "https://github.com/vadistic/types",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "homepage": "https://github.com/vadistic/types#readme",
  "license": "MIT",
  "main": "n/a",
  "private": true,
  "scripts": {
    "sync": "ts-node ./scripts/sync.ts"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jsonfile": "^5.0.0",
    "@types/semver": "^5.5.0",
    "dtslint": "^0.4.2",
    "gitpkg": "^1.0.0-beta.1",
    "husky": "^1.3.1",
    "jsonfile": "^5.0.0",
    "lerna": "^3.10.6",
    "lint-staged": "^8.1.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "prettier --write",
      "tslint -p 'tslint.json' --fix",
      "git add"
    ]
  },
  "optionalDependencies": {}
}
